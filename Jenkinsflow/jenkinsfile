pipeline {
    
    agent any 
    
    stages {
        
        stage('Checkout'){
           steps {
                git credentialsId: '', 
                url: 'https://github.com/Arjun3131/Jenkinsflow.git',
                branch: 'main'
           }
        }

        stage('Build Docker'){
            steps{
                script{
                    sh '''
                    echo 'Buid Docker Image'
                    docker build -t  .
                    '''
                }
            }
        }

        stage('Push the artifacts'){
           steps{
                script{
                    sh '''
                    echo 'Push to Repo'
                    docker push 
                    '''
                }
            }
        }
        
        stage('Checkout K8S manifest SCM'){
            steps {
                git credentialsId: , 
                url: 'https://github.com/Arjun3131/Jenkinsflow.git',
                branch: 'main'
            }
        }
        
        stage('Update K8S manifest){
            steps {
                script{
                    withCredentials() {
                        sh '''
                        cat deploy.yaml
                                               
                    }
                }
            }
        }
    }
}
